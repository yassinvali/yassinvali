@model List<Attitude.Shared.Entities.FrequencyBaseViewReport>

<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title"> @ViewBag.ReportTitle </h3>

        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <table class="rtable" style="width: 100%">
                    <thead>
                        <tr>
                            <th>
                                شرح
                            </th>
                            <th>
                                فراوانی
                            </th>

                            <th>
                                درصد فراوانی
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Count)
                                </td>
                                <td>
                                    @(String.Format("{0:0.00}", item.FrequencyPercent))
                                </td>
                            </tr>
                        }
                    <tr>
                        <td>جمع</td>
                        <td>@Model.Sum(q => q.Count)</td>
                        <td >100</td>
                    </tr>
                    </tbody>

                </table>
                <br />
            </div>

        </div><!-- /.box-body -->
    </div><!-- /.box -->
</section>
<!-- /.content -->
