@model AttitudeAdmin.DBContext.Entities.ApplicationUser
@{
    ViewBag.Title = "مدیریت کاربران";
}
<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">جزییات </h3>
            <div style="float: left;">
                <a class="btn btn-block btn-warning" href="@Url.Action("Index")">
                    <i class="fa fa-arrow-left"></i>
                    بازگشت
                </a>
            </div>
        </div><!-- /.box-header -->
        <div class="box-body">
            <dl class="dl-horizontal">
                <dt>
                    <span class="control-label"> کلمه عبور :</span>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserName)
                </dd>

            </dl>
        </div><!-- /.box-body -->

        <div class="box-footer text-left">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-sm btn-warning">ویرایش</a>
        </div>
    </div><!-- /.box -->
</section>
<!-- /.content -->
