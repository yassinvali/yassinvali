<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-rtl/bootstrap-rtl.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/plugins/font-awesome-4.5.0/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/dist/css/Admin.min.css" rel="stylesheet" />
    <link href="~/Content/dist/css/skin-blue.min.css" rel="stylesheet" />

    <link href="~/Content/dist/css/admin-rtl.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini fixed">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a href="/Admin/AdminHome" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"> پنل <b>مدیریت</b></span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                <img src="~/Content/dist/img/user.jpg" class="user-image" alt="User Image">
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">کاربر @User.Identity.Name خوش آمدید</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- The user image in the menu -->
                                <li class="user-header">
                                    <img src="~/Content/dist/img/user.jpg" class="img-circle" alt="User Image">
                                    <p>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <label> کاربر فعال : @User.Identity.Name  </label>
                                        }
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                    </div>
                                    <div class="pull-right">
                                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", @area = "/" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">خروج</a>
                                        }
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Content/dist/img/user.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info ">
                        <p>
                            @if (User.Identity.IsAuthenticated)
                            {
                                @User.Identity.Name
                            }
                        </p>
                        <!-- Status -->
                    </div>
                </div>
                <hr />
                <!-- search form (Optional) -->
                <!-- /.search form -->
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu">
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <li id="adminLink"><a href="/Users/Index"><i class="fa fa-fw fa-users"></i> <span>مدیریت کاربران</span></a></li>
                    }
                    <li>
                        <a href="@Url.Action("ExportToExcel","Reports")"><i class="fa fa-fw fa-table"></i> <span>دانلود پرسشنامه ها</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Report21","Reports")"><i class="fa fa-fw fa-table"></i> <span>شاخص نگرش کارکنان</span></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-fw fa-table"></i> <span>فراوانی پاسخگویان به تفکیک</span></a>
                        <ul>
                            <!-- Optionally, you can add icons to the links -->
                            <li><a href="@Url.Action("Report7","Reports")"><i class="fa fa-fw fa-table"></i> <span> سن</span></a></li>
                            <li><a href="@Url.Action("Report6","Reports")"><i class="fa fa-fw fa-table"></i> <span>جنسیت</span></a></li>
                            <li><a href="@Url.Action("Report8","Reports")"><i class="fa fa-fw fa-table"></i> <span> سنوات خدمت</span></a></li>
                            <li><a href="@Url.Action("Report9","Reports")"><i class="fa fa-fw fa-table"></i> <span> سنوات خدمت فعلی</span></a></li>
                            <li><a href="@Url.Action("Report10","Reports")"><i class="fa fa-fw fa-table"></i> <span> تحصیلات</span></a></li>
                            <li><a href="@Url.Action("Report11","Reports")"><i class="fa fa-fw fa-table"></i> <span> پست سازمانی</span></a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-fw fa-table"></i> <span>شاخص نگرش کارکنان به تفکیک</span></a>
                        <ul>
                            <!-- Optionally, you can add icons to the links -->
                            <li><a href="@Url.Action("Report15","Reports")"><i class="fa fa-fw fa-table"></i> <span> سن</span></a></li>
                            <li><a href="@Url.Action("Report14","Reports")"><i class="fa fa-fw fa-table"></i> <span>جنسیت</span></a></li>
                            <li><a href="@Url.Action("Report16","Reports")"><i class="fa fa-fw fa-table"></i> <span> سنوات خدمت</span></a></li>
                            <li><a href="@Url.Action("Report17","Reports")"><i class="fa fa-fw fa-table"></i> <span> سنوات خدمت فعلی</span></a></li>
                            <li><a href="@Url.Action("Report18","Reports")"><i class="fa fa-fw fa-table"></i> <span> تحصیلات</span></a></li>
                            <li><a href="@Url.Action("Report19","Reports")"><i class="fa fa-fw fa-table"></i> <span> پست سازمانی</span></a></li>
                        </ul>
                    </li>

                </ul><!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- Default to the left -->
            &copy; ۲۰۱۶ کلیه حقوق متعلق به ... می باشد.
        </footer>
    </div><!-- ./wrapper -->
    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 2.1.4 -->
    <script src="~/Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>

    <!-- highcharts -->
    <script src="~/Content/asset/highcharts/highcharts.js"></script>
    <script src="~/Content/asset/highcharts/exporting.js"></script>

    <!-- Bootstrap 3.3.5 -->
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <!-- Admin App -->
    <script src="~/Content/dist/js/app.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
